extends layout

block content
  div(class='row')
    div(class='col s12')
      div(class='card')
        div(class='card-content')
          span(class='card-title') Ranking
          table(id='tabelaRanking')
            thead()
              tr()
                th() Jogador
                th() Pontuação
                th() Partidas ganhas
            tbody()
              each r in ranking
                tr()
                  td() #{r.nome}
                  td() #{r.pontos}
                  td() #{r.partidas}
          
          div(class="fixed-action-btn")
            a(
              href="/novaPartida"
              class="btn-floating btn-large waves-effect waves-light red"
            )
              i(class="material-icons") add
                        
